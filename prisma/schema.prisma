model Todo {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  isChecked Boolean @default(false)
  owner User      @relation(fields: [ownerId], references: [id])
  ownerId String @db.ObjectId
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  hashedPassword String?
  todos Todo[]
}
